<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
 >
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
            >
            <Key
                latin:keySpec="0x16F3C"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="0x16F27"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="0x16F38"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="0x16F09"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="0x16F3E"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="0x16F29"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="0x16F11"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="0x16F05"
                latin:keyLabelFlags="fontNormal" />
        </case>
        <default>
             <Key
                latin:keySpec="0x16F3B"
                 latin:moreKeys="0x16F3C"
                 latin:keyHintLabel="0x16F3C"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER THA -->
             <Key
                latin:keySpec="0x16F27"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER KHA -->
             <Key
                 latin:keySpec="0x16F37"
                 latin:moreKeys="0x16F38"
                 latin:keyHintLabel="0x16F38"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER LA
                 MYANMAR LETTER VOCALIC L -->
             <Key
                latin:keySpec="0x16F08"
                latin:moreKeys="0x16F09"
                latin:keyHintLabel="0x16F09"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER BHA -->
             <Key
                 latin:keySpec="0x16F3D"
                 latin:moreKeys="0x16F3E"
                 latin:keyHintLabel="0x16F3E"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER NNYA -->
             <Key
                 latin:keySpec="0x16F28"
                 latin:moreKeys="0x16F29"
                 latin:keyHintLabel="0x16F29"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR VOWEL SIGN AA -->
             <Key
                 latin:keySpec="0x16F10"
                 latin:moreKeys="0x16F11,0x16F13"
                 latin:keyHintLabel="0x16F11"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR SIGN SECTION -->
             <Key
                 latin:keySpec="0x16F04"
                 latin:moreKeys="0x16F05,0x16F06"
                 latin:keyHintLabel="0x16F05"
                 latin:keyLabelFlags="fontNormal" />
        </default>
    </switch>
</merge>

<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
 >
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
            >
            <!-- MYANMAR LETTER JHA -->
            <Key
                latin:keySpec="0x16F00"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER WA -->
            <Key
                latin:keySpec="0x16F01"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER I -->
            <Key
                latin:keySpec="0x16F02"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER I -->
            <Key
                latin:keySpec="0x16F03"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR SYMBOL AFOREMENTIONED -->
            <Key
                latin:keySpec="0x16F04"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER II -->
            <Key
                latin:keySpec="0x16F05"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER U -->
            <Key
                latin:keySpec="0x16F06"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR SYMBOL COMPLETED -->
            <Key
                latin:keySpec="0x16F07"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER GREAT SA -->
            <Key
                latin:keySpec="0x16F08"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER NNA -->
            <Key
                latin:keySpec="0x16F09"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER E -->
            <Key
                latin:keySpec="0x16F0A"
                latin:moreKeys="("
                latin:keyHintLabel="("
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER AU -->
            <Key
                latin:keySpec="0x16F0B"
                latin:moreKeys=")"
                latin:keyHintLabel=")"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
        </case>

        <default>
            <!-- MYANMAR LETTER CHA -->
            <Key
                latin:keySpec="0x16F00"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER TA
                 MYANMAR LETTER TTA -->
            <Key
                latin:keySpec="0x16F01"
               latin:moreKeys="&#x100B;"
               latin:keyHintLabel="&#x100B;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER NA -->
            <Key
                latin:keySpec="0x16F02"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER MA -->
            <Key
                latin:keySpec="0x16F03"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER A -->
            <Key
                latin:keySpec="0x16F04"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER PA -->
            <Key
                latin:keySpec="0x16F05"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER KA -->
            <Key
                latin:keySpec="0x16F06"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER NGA -->
            <Key
                latin:keySpec="0x16F07"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER SA -->
            <Key
                latin:keySpec="0x16F08"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER CA -->
            <Key
                latin:keySpec="0x16F09"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER HA -->
            <Key
                latin:keySpec="0x16F0A"
                latin:moreKeys=")"
                latin:keyHintLabel=")"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER O -->
            <Key
                latin:keySpec="0x16F0B"
                latin:moreKeys="("
                latin:keyHintLabel="("
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </default>
    </switch>
</merge>
